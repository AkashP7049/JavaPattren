package PatternProgram;

import java.util.Scanner;
public class Ques_32{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the row");
        int n=sc.nextInt();
        
        for(int i=0;i<=n;i++){
            
			int num=n;
            for(int k=0;k<=i;k++){
            System.out.print(" ");
            }
            for(int j=num;j<i;j--){
            
                 System.out.print(j);
             
            }
            System.out.println();
            num--;
        }
    
        
    }
}